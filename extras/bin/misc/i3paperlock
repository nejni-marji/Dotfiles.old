#!/bin/bash
FILE=$1
DIR=~/.wallpaper
mapfile -t SCREENS < <(xrandr | grep -Po '(\d+)x(\d+)\+(\d+)\+(\d+)')
if [[ ${SCREENS[1]} ]]; then i3lock -c acacac; exit; fi
mapfile -t SIZE < <(echo $SCREENS | tr 'x+' '\n')
W=${SIZE[0]}
H=${SIZE[1]}
X=${SIZE[2]}
Y=${SIZE[3]}
convert $DIR/default.png -gravity Center -resize "$W"x -crop "$SCREENS" $DIR/prelock.png
