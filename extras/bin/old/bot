#!/bin/bash
[[ $(hostname) != "ODROID" ]] && PREFIX='ssh odroid -t'
ARGS=false
BOT=Relmaj
case "$1" in
	start)
		OPTS='start'
		;;
	stop)
		OPTS='stop'
		;;
	restart)
		OPTS='restart'
		;;
	*)
		CMD+='journalctl'
		OPTS='--user-unit'
		ARGS=true
		;;
esac
[[ $CMD ]] || CMD='systemctl'

RUN=($PREFIX $CMD '--user' $OPTS $BOT)

$ARGS && ${RUN[@]} "$@" || ${RUN[@]}
