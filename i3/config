		bindsym $SHF+1            move container to workspace number $w1
		bindsym $SHF+2            move container to workspace number $w2
		bindsym $SHF+3            move container to workspace number $w3
		bindsym $SHF+4            move container to workspace number $w4
		bindsym $SHF+5            move container to workspace number $w5
		bindsym $SHF+6            move container to workspace number $w6
		bindsym $SHF+7            move container to workspace number $w7
		bindsym $SHF+8            move container to workspace number $w8
		bindsym $SHF+9            move container to workspace number $w9
		bindsym $SHF+0            move container to workspace number $w0
		bindsym h          focus left
		bindsym j          focus down
		bindsym k          focus up
		bindsym l          focus right
		bindsym $dir_mov+h move left
		bindsym $dir_mov+j move down
		bindsym $dir_mov+k move up
		bindsym $dir_mov+l move right
		bindsym $dir_r10+h resize shrink width  10 px or 10 ppt
		bindsym $dir_r10+j resize grow   height 10 px or 10 ppt
		bindsym $dir_r10+k resize shrink height 10 px or 10 ppt
		bindsym $dir_r10+l resize grow   width  10 px or 10 ppt
		bindsym $dir_r05+h resize shrink width  5 px or 5 ppt
		bindsym $dir_r05+j resize grow   height 5 px or 5 ppt
		bindsym $dir_r05+k resize shrink height 5 px or 5 ppt
		bindsym $dir_r05+l resize grow   width  5 px or 5 ppt
		bindsym $dir_swp+h mark A; focus left;  mark B; swap container with mark A; [con_mark="A"] focus; [con_mark="A"] unmark A; [con_mark="B"] unmark B
		bindsym $dir_swp+j mark A; focus down;  mark B; swap container with mark A; [con_mark="A"] focus; [con_mark="A"] unmark A; [con_mark="B"] unmark B
		bindsym $dir_swp+k mark A; focus up;    mark B; swap container with mark A; [con_mark="A"] focus; [con_mark="A"] unmark A; [con_mark="B"] unmark B
		bindsym $dir_swp+l mark A; focus right; mark B; swap container with mark A; [con_mark="A"] focus; [con_mark="A"] unmark A; [con_mark="B"] unmark B
