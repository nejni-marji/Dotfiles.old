# {{{ dynami3: core/vars #
	set $bar_mode dock
	set $bar_hide hide
	set $bar_key none
	set $gaps_inner 0
	set $gaps_outer 0
	set $font monospace 6
	set $borders normal 0
# }}} core/vars
# {{{ dynami3: normal_mode #
	# default key to enter normal mode with
	set $n_dk slash
	bindsym $mod+$n_dk mode "normal"
	mode "normal" {
		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym Control+c mode "default"
		bindsym Control+bracketleft mode "default"
		bindsym $mod+$n_dk mode "default"
		bindsym $n_dk mode "default"
		bindsym equal       nop ipc resize grow
		bindsym $SHF+equal nop ipc resize shrink
		bindsym b      bar mode toggle;         $lock bar_mode
		bindsym $SHF+b bar hidden_state toggle; $lock bar_hide
		bindsym c       $exec $i3b/manager.sh reload
		bindsym r       $exec $i3b/manager.sh restart
		bindsym $SHF+q kill
		bindsym d $exec $i3b/date_notify.sh
		bindsym $SHF+d [urgent=latest] focus
		bindsym z                 workspace back_and_forth
		bindsym $SHF+z            move container to workspace back_and_forth
		bindsym bracketleft       workspace prev_on_output
		bindsym bracketright      workspace next_on_output
		bindsym $SHF+bracketleft  workspace prev
		bindsym $SHF+bracketright workspace next
		bindsym 1                 workspace number $w1
		bindsym 2                 workspace number $w2
		bindsym 3                 workspace number $w3
		bindsym 4                 workspace number $w4
		bindsym 5                 workspace number $w5
		bindsym 6                 workspace number $w6
		bindsym 7                 workspace number $w7
		bindsym 8                 workspace number $w8
		bindsym 9                 workspace number $w9
