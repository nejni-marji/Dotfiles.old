#!/bin/bash
source /etc/os-release
if ! [[ $ID == "arch" ]]; then
	echo "Not Arch Linux"
	echo "Not Arch Linux"
	exit
fi

PAC="$(checkupdates)"
PACN="$(echo "$PAC" | wc -l)"

if ! [[ $PAC ]]; then
	PACN="0"
fi
CHECK="$(($PACN))"
LINUX="$(echo "$PAC" | grep -c linux)"

if [[ $CHECK == 0 ]]; then
	exit
fi

text="$CHECK"
if [[ $LINUX != "0" ]]; then
	text="$text!"
fi

echo $text
echo $text

if [[ $CHECK -ge 30 ]]; then
	echo "#FF0000"
elif [[ $CHECK -ge 15 ]]; then
	echo "#FFFF00"
elif [[ $CHECK -gt 0 ]]; then
	echo "#FFFFFF"
elif [[ $CHECK == 0 ]]; then
	echo "#808080"
fi
